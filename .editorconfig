# ============================================
# EditorConfig - Editor configuration
# https://editorconfig.org
# ============================================

root = true

# ============================================
# Default settings for all files
# ============================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ============================================
# PHP files
# ============================================
[*.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# ============================================
# Markdown files
# ============================================
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# ============================================
# JSON files
# ============================================
[*.json]
indent_style = space
indent_size = 2

# ============================================
# YAML files
# ============================================
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ============================================
# XML files
# ============================================
[*.xml]
indent_style = space
indent_size = 2

# ============================================
# Configuration files
# ============================================
[*.{neon,ini,conf}]
indent_style = space
indent_size = 2

# ============================================
# Composer files
# ============================================
[composer.json]
indent_style = space
indent_size = 2

# ============================================
# Shell scripts
# ============================================
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# ============================================
# Windows scripts
# ============================================
[*.{bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 2

# ============================================
# PowerShell scripts
# ============================================
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 4

# ============================================
# Makefile
# ============================================
[Makefile]
indent_style = tab

# ============================================
# Documentation
# ============================================
[*.{txt,rst}]
trim_trailing_whitespace = false
