{
    "$schema": "https://captainhookphp.github.io/captainhook/schema.json",
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "/^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\\(.+\\))?!?:\\s.{1,100}$/",
                    "error": "Commit message must follow Conventional Commits format: <type>(<scope>): <description>"
                }
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": {
                    "extensions": "php"
                }
            },
            {
                "action": "echo 'üîí Scanning for secrets...' && gitleaks protect --staged --verbose --redact --config=.gitleaks.toml",
                "conditions": []
            },
            {
                "action": "echo 'üé® Running Pint (Laravel Standard - TOP PRIORITY)...' && composer pint:test",
                "conditions": []
            },
            {
                "action": "echo 'üìã Running PHPCS (Code Standards)...' && composer phpcs",
                "conditions": []
            },
            {
                "action": "echo 'üîç Running PHPStan (Static Analysis)...' && composer phpstan",
                "conditions": []
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "echo 'üîí Scanning commits for secrets...' && gitleaks detect --verbose --redact --config=.gitleaks.toml --log-opts=\"origin/main..HEAD\" || echo 'Note: Gitleaks scan of unpushed commits (install gitleaks: brew install gitleaks)'",
                "conditions": []
            },
            {
                "action": "echo 'Running tests...' && composer test",
                "conditions": []
            }
        ]
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": false,
        "actions": []
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    }
}
