{
    "name": "jooservices/dto",
    "description": "A PHP 8.5+ DTO and Data library with immutable DTOs and mutable Data objects",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "dto",
        "data-transfer-object",
        "data",
        "hydration",
        "normalization",
        "casting",
        "mapping"
    ],
    "authors": [
        {
            "name": "JOOservices",
            "email": "contact@jooservices.com"
        }
    ],
    "require": {
        "php": ">=8.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "laravel/pint": "^1.18",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpmd/phpmd": "^2.15",
        "friendsofphp/php-cs-fixer": "^3.65",
        "squizlabs/php_codesniffer": "^3.8",
        "fakerphp/faker": "^1.24",
        "captainhook/captainhook": "^5.23",
        "captainhook/plugin-composer": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "JOOservices\\Dto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JOOservices\\Dto\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "pint": "pint",
        "pint:test": "pint --test",
        "phpstan": "phpstan analyse --configuration=phpstan.neon --memory-limit=512M",
        "phpmd": "phpmd src,tests text phpmd.xml || true",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "lint": [
            "@pint:test",
            "@phpcs",
            "@phpstan"
        ],
        "lint:all": [
            "@pint:test",
            "@phpcs",
            "@phpstan",
            "@phpmd",
            "@cs:check"
        ],
        "fix": [
            "@pint",
            "@phpcbf",
            "@cs:fix"
        ],
        "ci": [
            "@lint",
            "@test:coverage"
        ],
        "post-install-cmd": "captainhook install --force --skip-existing",
        "post-update-cmd": "captainhook install --force --skip-existing"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "captainhook/plugin-composer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
